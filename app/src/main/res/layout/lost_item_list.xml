<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#483D8B">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tvItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="45dp"
                android:layout_marginTop="21dp"
                android:layout_x="45dp"
                android:layout_y="20dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/tvItemDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btn"
                android:layout_alignStart="@+id/tvItemName"
                android:layout_marginBottom="15dp"
                android:layout_x="47dp"
                android:layout_y="62dp"
                android:text="TextView"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="57dp" />

            <TextView
                android:id="@+id/tvItemLostDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tvItemDescription"
                android:layout_below="@+id/btn"
                android:layout_marginBottom="15dp"
                android:layout_x="42dp"
                android:layout_y="105dp"
                android:text="TextView"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="97dp" />

            <ImageButton
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tvItemName"
                android:layout_marginEnd="51dp"
                app:srcCompat="@android:drawable/ic_menu_delete" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

